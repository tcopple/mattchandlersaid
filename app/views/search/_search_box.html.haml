- message ||= ""

#action_bar
  #title.grid_7
    %img{ :src => 'images/title.png' }

  #search.grid_7
    = form_tag '/query' do
      = text_field_tag 'search', @search, :class => "bar"
      = image_submit_tag '/images/search.png', :class => "icon"
  .clear
  - if message.empty?
    #options
      %ul
        %li.recent= link_to "recently added", { :controller => "search", :action => "recent" }, :remote => true
        %li.recent= link_to "top queries", { :controller => "search", :action => "queries" }, :remote => true
    %br
    %br
    %div#info
  - else
    .grid_7.italic.message= message
